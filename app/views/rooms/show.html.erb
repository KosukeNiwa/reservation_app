<% @reservation.errors.full_messages.each do |message| %>
    <ul>
        <li class = "error-message"><%= message %></li>
    </ul>
<% end %>

<div class = "room-detail">
    <% # 左半分 %>
    <div class = "room-index-left">
        <% # 写真 %>
        <div class = "room-pic">
            <%= image_tag @room.room_pic.url %>
        </div>

        <% # 左下ボックス %>
        <div class = "room-show">
            <div class = "room-show-icon">
                <% if current_user.icon_img.present? %>
                    <%= image_tag current_user.icon_img.url, class: "login-icon-img" %>
                <% else %>
                    <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", class: "login-icon-img " %>
                <% end %>              
            </div>
            
            <div class = "room-show-profile">
                <div class = "room-name">
                    <%= @room.room_name %>
                </div>
                <div class = "room-address">
                    <%= @room.room_address %>
                </div>
            </div>
        </div>

        <p class = "room-introduction"><%= @room.room_introduction %></p>
        
    
    </div>

    <% # 右半分 %>
    <div class = "room-index-right">
        <h5>¥ <%= @room.room_charge %> / 日</h5>
        
        <%= form_with model: @reservation, url: reservations_confirm_path, method: :get do |f| %>

            <%= f.hidden_field :room_id, value: @room.id %>

            <%= f.label :start_day, "開始日" %>
            <%= f.date_field :start_day, class: "room-reservation-input-area" %>
            <%= f.label :end_day, "終了日" %>
            <%= f.date_field :end_day, class: "room-reservation-input-area" %>
            <%= f.label :people, "人数" %>
            <%= f.number_field :people, class: "room-reservation-input-area" %>

            <% if user_signed_in? %>
                <%= f.submit "予約する", class: "reservation-btn" %>
            <% else %>
                <%= f.submit "ログイン", class: "reservation-btn" %>
            <% end %>

        <% end %>

    </div>

</div>
