<div class = "profile">
    <% if flash[:notice] %>
        <div class="flash flash-success">
            <%= flash[:notice] %>
        </div>
    <% end %>

    <div class = "profile-container">
        <%= render "shared/sidebar" %>

        <div class = "profile-right">
            <div class = "profile-contents">
                <h5>プロフィール</h5>
                <div class = "profile-img-row">
                    <% if @user.icon_img? %>
                        <%= image_tag @user.icon_img.url, class: "profile-img" %>
                    <% else %>
                        <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", class: "profile-img " %>
                    <% end %>       
                </div>

                <%= form_with model: @user, method: :patch do |f| %>
                    <div class = "icon-img-row">
                        <%= f.label "アイコン画像" %>
                        <%= f.file_field :icon_img, class: "icon-img" %>
                    </div>
                    <div class = "user-name-row">
                        <%= f.label "名前" %>
                        <%= f.text_field :user_name, value: @user.user_name, placeholder: "自己紹介を入力", class: "user-name" %>
                    </div>
                    <div class = "user-introduction-row">
                        <%= f.label "自己紹介" %>
                        <%= f.text_area :user_introduction, placeholder: "自己紹介を入力", class: "user-introduction" %>
                    </div>
                    <%= f.submit "更新", class: "profile-update-btn" %>
                <% end %>

            </div>

        </div>
    </div>

</div>